<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <CheckBox
            android:id="@+id/eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equ" />

        <CheckBox
            android:id="@+id/tone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/eq"
            android:text="Tone" />

        <Button
            android:id="@+id/commit_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eq"
            android:text="Commit Bands to Equ" />

        <CheckBox
            android:id="@+id/dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/preset_spinner"
            android:layout_below="@+id/eq"
            android:text="Dynamic Eq" />


        <Spinner
            android:id="@+id/preset_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commit_eq" />

        <TableLayout
            android:id="@+id/equ_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preset_spinner"
            android:stretchColumns="1"

            />


    </RelativeLayout>

</ScrollView>